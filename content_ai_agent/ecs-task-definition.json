{
  "family": "content-automation-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::343989049356:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "content-automation-container",
      "image": "343989049356.dkr.ecr.us-east-1.amazonaws.com/content-ai-agent:latest",
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "MODEL",
          "value": "anthropic/claude-3-5-haiku-20241022"
        }
      ],
      "secrets": [
        {
          "name": "ANTHROPIC_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:343989049356:secret:CLAUDE_API_KEY-Ip9xqJ"
        },
        {
          "name": "YOUTUBE_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:343989049356:secret:YOUTUBE_API_KEY-AQOYwO"
        },
        {
          "name": "SERP_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:343989049356:secret:SERP_API_KEY-5spyIU"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/content-automation",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "essential": true
    }
  ]
}
